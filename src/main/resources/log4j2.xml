<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Properties>
		<Property name="basePath">./logs</Property>
	</Properties>
	<Appenders>
		<RollingFile name="File"
			fileName="${basePath}/e2eTest.log"
			filePattern="${basePath}/e2eTest.%d{dd-MM-YYYY HH:mm:ss}.log.gz"
			ignoreExceptions="false">
			<PatternLayout>
				<Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5p %m%n</Pattern>
			</PatternLayout>
			<Policies>
				<SizeBasedTriggeringPolicy size="1MB" />
			</Policies>
			<DefaultRolloverStrategy max="50" />
		</RollingFile>
		<RollingFile name="File1"
			fileName="${basePath}/test.log"
			filePattern="${basePath}/test.%d{dd-MM-YYYY HH:mm:ss}.log.gz"
			ignoreExceptions="false">
			<PatternLayout>
				<Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5p %m%n</Pattern>
			</PatternLayout>
			<Policies>
				<SizeBasedTriggeringPolicy size="1MB" />
			</Policies>
			<DefaultRolloverStrategy max="50" />
		</RollingFile>
		<RollingFile name="full"
			fileName="${basePath}/framwork.log"
			filePattern="${basePath}/framwork.%d{dd-MM-YYYY HH:mm:ss}.log.gz"
			ignoreExceptions="false">
			<PatternLayout>
				<Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5p %m%n</Pattern>
			</PatternLayout>
			<Policies>
				<SizeBasedTriggeringPolicy size="1MB" />
			</Policies>
			<DefaultRolloverStrategy max="50" />
		</RollingFile>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</Console>
	</Appenders>
	<Loggers>
		<Logger name="com.line.qatest" level="trace" additivity="false"><!-- additivity="false" will elimenate duplicate runs -->
			<AppenderRef ref="File"/>
		</Logger>
		<Logger name="com.line.listenears" level="trace" additivity="false"><!-- additivity="false" will elimenate duplicate runs -->
			<AppenderRef ref="File"/>
		</Logger>
		<Root level="trace">
			<AppenderRef ref="Console" />
		</Root>
	</Loggers>
</Configuration>